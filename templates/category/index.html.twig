{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}

<pre>
    {{ dump(categories) }}
</pre>

    <h1>Toutes les catégories : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{category.name}}</h2>
            <a href="{{ path("category_show", { categoryName: category.name })}}">Voir les séries associées à cette catégorie</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}

