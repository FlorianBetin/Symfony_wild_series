{% block title %}Serie
	{{ program.id }}
{% endblock %}

{% block body %}

	<div class>
		<h1>{{program.title}}
			- Season
			{{season.number}}</h1>
            <p>{{ season.year }}</p>
		<p>{{ program.synopsis }}</p>
		<p>Category :
			{{ program.category.name }}</p>
		

		<div>
